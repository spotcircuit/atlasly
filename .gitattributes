# Normalize line endings across platforms
* text=auto

# Use LF for source files
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.css text eol=lf
*.md text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.prisma text eol=lf

# Shell scripts should be LF
*.sh text eol=lf

# Windows PowerShell and batch stay CRLF
*.ps1 text eol=crlf
*.bat text eol=crlf
